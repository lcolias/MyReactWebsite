import { useEffect, useState } from 'react';

const useBackgroundTransition = (gradient) => { 
  
    // create the state that tracks the backgroundstate  
    const [background, setBackground] = useState(''); 
     
    
    
    useEffect(() => {

        const generateTransition = () => {
        
            setBackground(`--background-image: ${gradient})`);
        };
        
        generateTransition();
      }, [gradient]);
  
    return background;

};


export default useBackgroundTransition;